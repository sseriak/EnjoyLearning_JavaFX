<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="640.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enjoylearning.RepeatSceneController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="TOP_CENTER" prefWidth="200.0">
      <children>
      
          <Button onAction="#goToMain" text="Close" />
         <ChoiceBox fx:id="categoryChoiceBox" prefWidth="150.0" />
         <ChoiceBox fx:id="tagChoiceBox" prefWidth="150.0" />
         <ChoiceBox fx:id="scoreChoiceBox" prefWidth="150.0" />
         <Button fx:id="startButton" mnemonicParsing="false" onAction="#startRepetition" text="Start" />
      </children>
   </HBox>
   <VBox fx:id="flipWordCard" alignment="TOP_CENTER" maxWidth="280.0" prefHeight="400.0" style="-fx-border-color: #000;" visible="false">
      <children>
         <Label fx:id="labelTopic">
            <VBox.margin>
               <Insets bottom="50.0" />
            </VBox.margin>
         </Label>
         <Label fx:id="labelWord">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label text="-----------------------------" />
         <Label fx:id="labelTranslation">
            <VBox.margin>
               <Insets bottom="50.0" />
            </VBox.margin>
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label fx:id="labelTag">
            <VBox.margin>
               <Insets bottom="150.0" />
            </VBox.margin>
         </Label>
         <HBox fx:id="scoreBox" alignment="BOTTOM_CENTER" visible="false">
            <children>
               <Button mnemonicParsing="false" onAction="#clickOnScoreButton" text="Fail" />
               <Button mnemonicParsing="false" onAction="#clickOnScoreButton" text="Bad" />
               <Button mnemonicParsing="false" onAction="#clickOnScoreButton" text="Good" />
               <Button mnemonicParsing="false" onAction="#clickOnScoreButton" text="Great" />
            </children>
         </HBox>
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding></VBox>
   <Label fx:id="completionText">
      <font>
         <Font size="30.0" />
      </font>
   </Label>
</VBox>
