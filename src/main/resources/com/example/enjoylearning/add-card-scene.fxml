<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.enjoylearning.AddCardSceneController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox maxWidth="350.0" prefHeight="500.0" prefWidth="200.0" style="-fx-border-color: #000;">
      <children>
         <HBox alignment="CENTER" prefHeight="14.0" prefWidth="600.0">
            <children>
               <Button mnemonicParsing="false" onAction="#goToMain" text="Close" />
               <Button mnemonicParsing="false" text="Save" />
            </children>
         </HBox>
         <TextField fx:id="inputTopic" promptText="Topic" />
         <TextField fx:id="inputWord" promptText="word" />
         <TextField fx:id="inputTranslation" promptText="translation" />
         <TextField fx:id="inputTag" promptText="#Tag" />
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </VBox>
</VBox>
